
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User files - allow users to read and write only their own files
    match /users/{userId}/{allFiles=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Task attachments - allow users to read and write attachments to their own tasks
    match /tasks/{taskId}/{allFiles=**} {
      allow read, write: if request.auth != null && resource.metadata.userId == request.auth.uid;
    }
    
    // Public files that anyone can read but only authenticated users can write
    match /public/{file=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
